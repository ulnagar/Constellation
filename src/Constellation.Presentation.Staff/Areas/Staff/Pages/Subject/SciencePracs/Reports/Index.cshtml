@page
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Subject.SciencePracs.Reports.IndexModel
@{
}

<h2>Science Prac Reports</h2>

<div class="page-menu">
</div>

<hr />

<div class="row mt-3">
    <div class="col-md-12">
        <h4>Overdue Rolls</h4>
        An Excel file that lists all Lesson Rolls that are currently overdue.
    </div>
    <div class="col-md-2">
        <a asp-page-handler="DownloadReport" class="btn btn-block btn-warning show-loader-5">Run Report</a>
    </div>
    
    <div class="col-md-12">
        <h4>YTD Roll Status</h4>
        An Excel file that lists Schools with a breakdown of how many Lesson Rolls that are currently overdue.
    </div>
    <div class="col-md-2">
        <a asp-page-handler="DownloadYTDReport" class="btn btn-block btn-warning show-loader-5">Run Report</a>
    </div>

    <div class="col-md-12 mt-2">
        <h4>Search for Roll</h4>
        Search for Rolls by student or school
    </div>
    <div class="col-md-2">
        <a asp-page="/Subject/SciencePracs/Reports/Search" asp-area="Staff" class="btn btn-block btn-warning">Search</a>
    </div>

    <div class="col-md-12 mt-2">
        <h4>Marked Rolls without Present Students</h4>
        List of Rolls that have been submitted without any students marked present
    </div>
    <div class="col-md-2">
        <a asp-page="/Subject/SciencePracs/Reports/NotPresent" asp-area="Staff" class="btn btn-block btn-warning">Run Report</a>
    </div>
</div>

