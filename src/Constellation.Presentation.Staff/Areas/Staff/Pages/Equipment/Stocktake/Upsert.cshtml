@page "{id}"
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Equipment.Stocktake.UpsertModel
@using Constellation.Core.Models.Stocktake.Identifiers

<h2>@(Model.Id.Equals(StocktakeEventId.Empty) ? "New Stocktake Event" : "Edit Stocktake Event")</h2>

<div class="page-menu">
    <a asp-page="/Equipment/Stocktake/Index" asp-area="Staff" class="btn btn-danger btn-pull-right">Go Back</a>
</div>

<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group row">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StartDate" class="col-md-2">Start Date</label>
            <div class="col-md-3">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EndDate" class="col-md-2">End Date</label>
            <div class="col-md-3">
                <input asp-for="EndDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="AcceptLateResponses" class="col-md-3">Accept Late Responses?</label>
            <div class="col-md-2">
                <input asp-for="AcceptLateResponses" class="form-control" />
                <span asp-validation-for="AcceptLateResponses" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}