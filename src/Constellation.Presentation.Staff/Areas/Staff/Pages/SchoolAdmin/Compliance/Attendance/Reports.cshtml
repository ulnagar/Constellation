@model Constellation.Presentation.Staff.Areas.Staff.Pages.SchoolAdmin.Compliance.Attendance.ReportModel

<h2>Generate Attendance Report</h2>

<div class="page-menu">

</div>

<hr />

<form method="post">
    <div class="form-group row">
        <label asp-for="SelectedPeriod" class="col-md-2">Attendance Period</label>
        <div class="col-md-5">
            <select asp-for="SelectedPeriod" asp-items="new SelectList(Model.PeriodNames)" class="form-control combo custom-select">
                <option selected="selected" value=""> -- Please Select -- </option>
            </select>
            <span asp-validation-for="SelectedPeriod" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-3">
            <input type="submit" value="Download" class="btn btn-primary btn-block btn-lg" />
        </div>
    </div>
</form>