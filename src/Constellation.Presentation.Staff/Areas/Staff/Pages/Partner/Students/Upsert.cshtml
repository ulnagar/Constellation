@page "{id?}"
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Partner.Students.UpsertModel

@using Constellation.Core.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
}

<h2>@(string.IsNullOrWhiteSpace(Model.Id) ? "New Student" : "Edit Student")</h2>

<div class="page-menu">
    <a href="javascript:history.go(-1)" class="btn btn-danger btn-pull-right">Go Back</a>
</div>

<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label asp-for="StudentId" class="col-md-2">SRN</label>
            <div class="col-md-3">
                <input asp-for="StudentId" class="form-control" readonly="@(!string.IsNullOrWhiteSpace(Model.Id))"/>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FirstName" class="col-md-2">First Name</label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-md-2">Last Name</label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PortalUsername" class="col-md-2">DoE Username</label>
            <div class="col-md-3">
                <input asp-for="PortalUsername" class="form-control" />
                <span asp-validation-for="PortalUsername" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Grade" class="col-md-2">Grade at Present</label>
            <div class="col-md-3">
                <select asp-for="Grade" asp-items="@Html.GetEnumSelectList<Grade>()" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Gender" class="col-md-2"></label>
            <div class="col-md-3">
                <select asp-for="Gender" asp-items="Model.GenderList" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SchoolCode" class="col-md-2">School</label>
            <div class="col-md-3">
                <select asp-for="SchoolCode" asp-items="Model.SchoolList" class="form-control combo">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="SchoolCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial"/>
}