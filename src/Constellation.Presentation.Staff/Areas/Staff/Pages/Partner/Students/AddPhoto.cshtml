@page
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Partner.Students.AddPhotoModel
@{
}

<h2>Upload Student Photo</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-horizontal">

        <div class="form-group row">
            <label asp-for="Id" class="col-md-2">Student</label>
            <div class="col-md-8">
                <select asp-for="Id" asp-items="@Model.Students" class="combo">
                    <option> -- Select -- </option>
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="UploadFile" class="col-md-2">Image File</label>
            <div class="col-md-8">
                <div class="custom-file">
                    <input asp-for="UploadFile" type="file" class="custom-file-input" />
                    <label class="custom-file-label" asp-for="UploadFile">Choose file</label>
                </div>
                <span asp-validation-for="UploadFile" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}