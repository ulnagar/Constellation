@page "{id?}"
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Partner.Schools.UpsertModel

<h2>@(string.IsNullOrWhiteSpace(Model.Id) ? "New School" : "Edit School")</h2>

<div class="page-menu">
    <a asp-page="/Partner/Schools/Index" asp-area="Staff" class="btn btn-danger btn-pull-right">Go Back</a>
</div>

<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label asp-for="SchoolCode" class="col-md-2">School Code</label>
            <div class="col-md-3">
                <input asp-for="SchoolCode" class="form-control" readonly="@(!string.IsNullOrWhiteSpace(Model.Id))" />
                <span asp-validation-for="SchoolCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Town" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="State" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PostCode" class="col-md-2">Post Code</label>
            <div class="col-md-3">
                <input asp-for="PostCode" class="form-control" />
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-md-2">Phone Number</label>
            <div class="col-md-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FaxNumber" class="col-md-2">Fax Number</label>
            <div class="col-md-3">
                <input asp-for="FaxNumber" class="form-control" />
                <span asp-validation-for="FaxNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EmailAddress" class="col-md-2">Email Address</label>
            <div class="col-md-6">
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-md-2">Heat Week School</label>
            <div class="col-md-3 pl-3">
                <input type="checkbox" asp-for="HeatSchool" class="checkbox-toggle" />
                <span asp-validation-for="HeatSchool" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="PrincipalNetwork" class="col-md-2">Principal Network</label>
            <div class="col-md-3">
                <input asp-for="PrincipalNetwork" class="form-control" />
                <span asp-validation-for="PrincipalNetwork" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Division" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Division" class="form-control" />
                <span asp-validation-for="Division" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Electorate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Electorate" class="form-control" />
                <span asp-validation-for="Electorate" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}