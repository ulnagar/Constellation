@page "{id?}"
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Partner.Staff.UpsertModel

@using Constellation.Core.Models.StaffMembers.Identifiers

@{
    Layout = "/Areas/Staff/Pages/Shared/_StaffLayout.bs5.cshtml";
}

<h2>@(Model.Id == null || Model.Id == StaffId.Empty ? "New Staff Member" : "Edit Staff Member")</h2>

<div class="page-menu">
    <a asp-page="/Partner/Staff/Index" asp-area="Staff" class="btn btn-danger btn-pull-right">Go Back</a>
</div>
        
<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="mb-3 row">
            <label asp-for="EmployeeId" class="col-md-2">Employee Id</label>
            <div class="col-md-3">
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="FirstName" class="col-md-2">First Name</label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="PreferredName" class="col-md-2">Preferred Name</label>
            <div class="col-md-3">
                <input asp-for="PreferredName" class="form-control" />
                <span asp-validation-for="PreferredName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="LastName" class="col-md-2">Last Name</label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3 row">
            <label asp-for="Gender" class="col-md-2"></label>
            <div class="col-md-3">
                <select asp-for="Gender" asp-items="Model.GenderList" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="EmailAddress" class="col-md-2">Email Address</label>
            <div class="col-md-3">
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="SchoolCode" class="col-md-2">School</label>
            <div class="col-md-3">
                <select asp-for="SchoolCode" asp-items="@Model.SchoolList" class="form-control combo">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="SchoolCode" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="IsShared" class="col-md-2">Shared Staff</label>
            <div class="col-md-3">
                <input asp-for="IsShared" class="form-control custom-checkbox" />
                <span asp-validation-for="IsShared" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3">
            <div class="col-md-offset-2 col-md-3 d-grid">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial"/>
}