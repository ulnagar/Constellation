@page
@model Constellation.Presentation.Staff.Areas.Staff.Pages.StudentAdmin.Absences.ReportModel

<h2>Attendance Reports</h2>

<div class="page-menu">
</div>

<hr />

<div class="row mt-3">
    <div class="col-md-8">
        <h3>Absence Reports</h3>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <h4>Unexplained Partial Absence Report</h4>
        An Excel export of each unexplained partial absence along with the status
    </div>
    <div class="col-md-2">
        <a asp-page-handler="PartialReport" class="btn btn-block btn-warning">Run Report</a>
    </div>
</div>

<hr />

<div class="row mt-3">
    <div class="col-md-8">
        <h3>Attendance Reports</h3>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <h4>Summary Report</h4>
        A PDF report of the selected fortnight attendance for a selected student
    </div>
    <div class="col-md-2">
        <button type="button" data-toggle="modal" data-target="#attendanceReportModal" class="btn btn-block btn-warning summary-report-button">Run Report</button>
    </div>
</div>

<vc:student-attendance-report />

@section scripts {
    <script>
        $('#attendanceReportSubmitButton').click(function (e) {
            e.preventDefault();
            $('#attendanceReportModal').modal('hide');
            $('#attendanceReportForm').submit();
        });
    </script>
}