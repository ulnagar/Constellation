@model Constellation.Presentation.Staff.Areas.Staff.Pages.Shared.Components.ApproveAttendancePlanModal.ApproveAttendancePlanModalSelection

<form asp-page-handler="ApprovePlan" method="post">
    <div class="modal fade" tabindex="-1" id="approve-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Approve Attendance Plan</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col">
                            By marking this plan as approved, you affirm that the students pattern of attendance is satisfactory.
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3">Comment</label>
                        <div class="col-md-9">
                            <textarea asp-for="Comment" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Approve</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>