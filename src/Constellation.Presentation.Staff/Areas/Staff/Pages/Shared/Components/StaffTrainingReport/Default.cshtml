@model Constellation.Presentation.Staff.Areas.Staff.Pages.Shared.Components.StaffTrainingReport.StaffTrainingReportSelection

<div class="modal fade" tabindex="-1" id="staffReport">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="StaffReport" id="staffReportForm">
                <div class="modal-header">
                    <h5 class="modal-title">Staff Training Report</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col">
                            <span class="control-label">Staff Member</span>
                            <select asp-for="StaffId" asp-items="@(new SelectList(Model.StaffList, "Key", "Value"))" class="combo" style="width:100%">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <span class="control-label">Include Certificates</span>
                        </div>
                        <div class="form-group col-6">
                            <input asp-for="IncludeCertificates" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="staffReportSubmitButton" value="Download" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

