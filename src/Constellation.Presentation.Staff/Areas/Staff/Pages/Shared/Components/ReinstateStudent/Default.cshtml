@model Constellation.Presentation.Staff.Areas.Staff.Pages.Shared.Components.ReinstateStudent.ReinstateStudentSelection

@using Constellation.Core.Enums

<div class="modal fade" tabindex="-1" id="reinstateStudentModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="Reinstate" id="reinstateStudentForm">
                <div class="modal-header">
                    <h5 class="modal-title">Reinstate Student</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col">
                            <span class="control-label">School</span>
                            <select asp-for="SchoolCode" class="combo" style="width:100%">
                                <option value="">-- Select --</option>
                                @foreach (var entry in Model.Schools)
                                {
                                    <option value="@entry.Code">@entry.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <span class="control-label">Grade</span>
                        </div>
                        <div class="form-group col-12">
                            <select asp-for="Grade" asp-items="Html.GetEnumSelectList<Grade>()"></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="reinstateStudentSubmit" value="Save" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>
