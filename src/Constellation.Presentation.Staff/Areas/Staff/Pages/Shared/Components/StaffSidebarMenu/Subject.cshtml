                        <li class="nav-item">
                            <a class="nav-link @(Model == ActivePage.Subject_SciencePracs_Reports ? "active" : "")" asp-page="/Subject/SciencePracs/Reports/Index" asp-area="Staff">
                                Reports
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header" id="tutorialsHeading">
                <h4 class="sidebar-heading d-flex justify-content-between p-3 mb-1 text-muted" data-toggle="collapse" data-target="#tutorials" role="button">
