@model Constellation.Presentation.Staff.Areas.Staff.Pages.Shared.PartialViews.BulkUnenrolStudentConfirmationModal.BulkUnenrolStudentConfirmationModalViewModel

<div class="modal-header">
    <h5 class="modal-title">Unenrol Student</h5>
</div>
<div class="modal-body">
    <div class="row">
        <div class="form-group col">
            <span class="control-label">Are you sure you wish to remove @Model.Student from all classes?</span>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a asp-page-handler="BulkUnenrol" class="btn btn-danger show-loader">Unenrol Student</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal">Close</button>
</div>