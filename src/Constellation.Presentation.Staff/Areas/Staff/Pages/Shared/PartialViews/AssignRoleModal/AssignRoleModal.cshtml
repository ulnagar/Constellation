@using Constellation.Core.Models.SchoolContacts.Enums
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Shared.PartialViews.AssignRoleModal.AssignRoleModalViewModel

<form asp-page-handler="CreateAssignment" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Assign Role</h5>
    </div>
    <div class="modal-body">
        <div class="form-group row">
            <label class="col-md-3">Contact</label>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.ContactId)
                @Model.ContactName
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SchoolCode" class="col-md-3">School</label>
            <div class="col-md-9">
                <select asp-for="SchoolCode" asp-items="@Model.Schools" class="combo" style="width:100%">
                    <option value="">-- Select --</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoleName" class="col-md-3">Role</label>
            <div class="col-md-9">
                @if (Model.RoleName == Position.Empty)
                {
                    <select asp-for="RoleName" asp-items="@Model.Roles" class="combo-with-tag" style="width:100%">
                        <option value="">-- Select or Enter --</option>
                    </select>
                }
                else
                {
                    @Html.HiddenFor(model => model.RoleName)
                    @Model.RoleName
                }
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Note" class="col-md-3">Note</label>
            <div class="col-md-9">
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Assign Role</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal">Close</button>
    </div>
</form>


