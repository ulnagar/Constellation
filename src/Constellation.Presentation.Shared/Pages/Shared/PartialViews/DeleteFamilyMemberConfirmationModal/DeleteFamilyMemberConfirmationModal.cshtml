@model DeleteFamilyMemberConfirmationModalViewModel

<div class="modal-header">
    <h5 class="modal-title">@Model.Title</h5>
</div>
<div class="modal-body">
    <div class="row">
        <div class="form-group col">
            <span class="control-label">Are you sure you wish to remove @Model.UserName from the @Model.FamilyName family?</span>
        </div>
    </div>
</div>
<div class="modal-footer">
    @if (string.IsNullOrWhiteSpace(Model.StudentId))
    {
        <button asp-page="/Partner/Students/Families/Details" asp-area="Staff" asp-page-handler="RemoveParent" asp-route-id="@Model.FamilyId" asp-route-parentId="@Model.ParentId" class="btn btn-danger">Remove</button>
    }
    else
    {
        <button asp-page="/Partner/Students/Families/Details" asp-area="Staff" asp-page-handler="RemoveStudent" asp-route-id="@Model.FamilyId" asp-route-studentId="@Model.StudentId" class="btn btn-danger">Remove</button>
    }
    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal">Close</button>
</div>