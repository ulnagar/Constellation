@model string

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-page="/Index" asp-area="">Parent Portal</a>
        <button title="Navigation menu" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-sidebar">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="collapse navbar-collapse" id="nav-sidebar">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <a class="nav-link @(Model == ActivePage.Dashboard ? "active" : "")" asp-page="/Index" asp-area="Parents" onclick="showLoader()">
                <i class="fas fa-home-lg" aria-hidden="true"></i> Home
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link @(Model == ActivePage.Attendance ? "active" : "")" asp-page="/Attendance/Index" asp-area="Parents">
