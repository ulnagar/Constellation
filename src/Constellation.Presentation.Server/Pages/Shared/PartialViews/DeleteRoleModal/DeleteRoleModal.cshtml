@model DeleteRoleModalViewModel

<div class="modal-header">
    <h5 class="modal-title">Delete Role</h5>
</div>
<div class="modal-body">
    <div class="row">
        <div class="form-group col">
            <span class="control-label">Are you sure you wish to remove @Model.ContactName from the role of @Model.ContactRole at @Model.SchoolName?</span>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a asp-page-handler="DeleteAssignment" asp-page="/SciencePracs/Teachers/Index" asp-area="Subject" asp-route-id="@Model.RoleId" class="btn btn-danger">Delete Role</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal">Close</button>
</div>