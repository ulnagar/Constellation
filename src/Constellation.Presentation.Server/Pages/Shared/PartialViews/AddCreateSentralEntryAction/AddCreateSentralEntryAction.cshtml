@model AddCreateSentralEntryActionViewModel

<form asp-page-handler="NewSentralAction" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Add Create Sentral Entry Action</h5>
    </div>
    <div class="modal-body">
        <div class="form-group col">
            <span class="control-label">Offering</span>
            <select asp-for="OfferingId" asp-items="@(new SelectList(Model.Offerings, "Key", "Value"))" class="combo" style="width:100%">
                <option value="">-- Select --</option>
            </select>
        </div>
        
