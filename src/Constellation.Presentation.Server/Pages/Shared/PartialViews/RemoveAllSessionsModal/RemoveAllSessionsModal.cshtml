@model RemoveAllSessionsModalViewModel

<div class="modal-header">
    <h5 class="modal-title">Remove All Sessions</h5>
</div>
<div class="modal-body">
    <div class="row">
        <div class="form-group col">
            <span class="control-label">Are you sure you wish to remove all sessions from the @Model.CourseName offering @Model.OfferingName?</span>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a asp-page-handler="RemoveAllSessions" asp-page="/Offerings/Details" asp-area="Subject" asp-route-id="@Model.OfferingId" class="btn btn-danger">Remove All Sessions</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal">Close</button>
</div>