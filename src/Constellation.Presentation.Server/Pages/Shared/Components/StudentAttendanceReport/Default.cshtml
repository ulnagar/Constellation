@model AttendanceReportSelection

<div class="modal fade" tabindex="-1" id="attendanceReportModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="AttendanceReport" id="attendanceReportForm">
                <div class="modal-header">
                    <h5 class="modal-title">Student Attendance Report</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col">
                            <span class="control-label">Student</span>
                            <select asp-for="StudentId" asp-items="@(new SelectList(Model.StudentList, "Key", "Value"))" class="combo" style="width:100%">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <span class="control-label">Date to Report</span>
                        </div>
                        <div class="form-group col-6">
                            <input asp-for="ReportDate" class="form-control" type="date" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="attendanceReportSubmitButton" value="Download Report" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>