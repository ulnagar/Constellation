@model AddTeacherToOfferingSelection

<div class="modal fade" tabindex="-1" id="addTeacherModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page="/Offerings/Details" asp-area="Subject" asp-route-id="@Model.OfferingId.Value" asp-page-handler="AddTeacher">
                <div class="modal-header">
                    <h5 class="modal-title">Add Teacher to Offering</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col">
                            <span class="control-label">Teacher</span>
                            <select asp-for="StaffId" asp-items="@(new SelectList(Model.Staff, "Key", "Value"))" class="combo" style="width:100%">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col">
                            <span>will be added to <span clas="font-weight-bold">@Model.CourseName</span> offering <span class="font-weight-bold">@Model.OfferingName</span> as </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col">
                            <span class="control-label">Type</span>
                            <select asp-for="AssignmentType" asp-items="@(new SelectList(Model.AssignmentTypes, "Key", "Value"))" class="combo" style="width:100%">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>