@model TutorialRollCreateSelection

<div class="modal fade" tabindex="-1" id="rollCreateModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="CreateRoll" id="rollCreateForm">
                <div class="modal-header">
                    <h5 class="modal-title">Tutorial Roll Creation</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-6">
                            <span class="control-label">Roll Date</span>
                        </div>
                        <div class="form-group col-6">
                            <input asp-for="RollDate" class="form-control" type="date" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="rollCreateSubmitButton" value="Save" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>