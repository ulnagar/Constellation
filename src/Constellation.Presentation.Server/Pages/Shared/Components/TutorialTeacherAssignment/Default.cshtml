@model TutorialTeacherAssignmentSelection

<div class="modal fade" tabindex="-1" id="teacherAssignmentModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="AssignTeacher" id="teacherAssignmentForm">
                <div class="modal-header">
                    <h5 class="modal-title">Staff Training Report</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col">
                            <span class="control-label">Staff Member</span>
                            <select asp-for="StaffId" asp-items="@(new SelectList(Model.StaffList, "Key", "Value"))" class="combo" style="width:100%">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <span class="control-label">Temporary Assignment?</span>
                        </div>
                        <div class="form-group col-6">
                            <input asp-for="LimitedTime" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <span class="control-label">Temporary Assignment End Date</span>
                        </div>
                        <div class="form-group col-6">
                            <input asp-for="EffectiveTo" class="form-control" type="date" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="teacherAssignmentSubmitButton" value="Save" class="btn btn-primary btn-block btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>