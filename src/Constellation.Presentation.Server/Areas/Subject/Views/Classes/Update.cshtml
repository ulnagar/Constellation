@model Classes_UpdateViewModel

<h2>@(Model.IsNew ? "New Class" : "Edit Class")</h2>

<div class="row">
    <a asp-action="Index" asp-controller="Classes" asp-area="Subject" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-action="Update" asp-controller="Classes" asp-area="Subject" method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IsNew)
        @Html.HiddenFor(model => model.Offering.Id)

        <div class="form-group row">
            <label asp-for="Offering.Name" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Offering.Name" class="form-control" />
                <span asp-validation-for="Offering.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Offering.CourseId" class="col-md-2">Course</label>
            <div class="col-md-3">
                <select asp-for="Offering.CourseId" asp-items="@Model.CourseList" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Offering.CourseId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Offering.StartDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Offering.StartDate" class="form-control" />
                <span asp-validation-for="Offering.StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Offering.EndDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Offering.EndDate" class="form-control" />
                <span asp-validation-for="Offering.EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CreateRoom" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="CreateRoom" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}