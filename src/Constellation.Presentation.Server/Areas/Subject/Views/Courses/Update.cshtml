@using Constellation.Core.Enums
@model Course_UpdateViewModel

<h2>@(Model.IsNew ? "New Course" : "Edit Course")</h2>

<div class="row">
    <a asp-action="Index" asp-controller="Courses" asp-area="Subject" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-action="Update" asp-controller="Courses" asp-area="Subject" method="post">
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IsNew)
        @Html.HiddenFor(model => model.Course.Id)

        <div class="form-group row">
            <label asp-for="Course.Name" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Course.Name" class="form-control" />
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Course.Grade" class="col-md-2"></label>
            <div class="col-md-3">
                <select asp-for="Course.Grade" asp-items="Html.GetEnumSelectList<Grade>()" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Course.Grade" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Course.Faculty" class="col-md-2"></label>
            <div class="col-md-3">
                <select asp-for="Course.Faculty" class="form-control">
                    <option value="">-- Select --</option> 
                    @foreach (Faculty item in Enum.GetValues(typeof(Faculty)))
                        {
                            <option value="@item">@item</option>
                        }
                </select>
                <span asp-validation-for="Course.Faculty" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Course.HeadTeacherId" class="col-md-2"></label>
            <div class="col-md-3">
                <select asp-for="Course.HeadTeacherId" asp-items="@Model.StaffList" class="form-control combo">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Course.HeadTeacherId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Course.FullTimeEquivalentValue" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Course.FullTimeEquivalentValue" class="form-control" />
                <span asp-validation-for="Course.FullTimeEquivalentValue" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}