@model Constellation.Presentation.Server.Areas.Subject.Models.Assignments.DetailsViewModel

<h2>Canvas Assignment</h2>

<div class="row">
    <a href="javascript:history.go(-1)" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<div>
    <div class="row">
        <label asp-for="Assignment.CourseDisplayName" class="col-md-2">Course</label>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Assignment.CourseDisplayName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row">
        <label asp-for="Assignment.Name" class="col-md-2"></label>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.Assignment.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row">
        <label asp-for="Assignment.DueDate" class="col-md-2">Due Date</label>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.Assignment.DueDate, "ShortDate", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row">
        <label asp-for="Assignment.UnlockDate" class="col-md-2">Unlock Date</label>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.Assignment.UnlockDate, "ShortDate", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row">
        <label asp-for="Assignment.LockDate" class="col-md-2">Lock Date</label>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.Assignment.LockDate, "ShortDate", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="row">
        <label asp-for="Assignment.AllowedAttempts" class="col-md-2">Allowed Attempts</label>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.Assignment.AllowedAttempts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</div>

<table class="table-striped table-hover data-table">
    <thead>
    <tr>
        <th>Student</th>
        <th>Submitted At</th>
        <th>Attempt #</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Submissions)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.StudentName)</td>
                <td>@Html.DisplayFor(model => item.SubmittedDate, "ShortDate")</td>
                <td>@Html.DisplayFor(model => item.Attempt)</td>
                <td>
                    <a asp-action="ResubmitToCanvas" asp-controller="Assignments" asp-area="Subject" asp-route-id="@item.Id" class="btn btn-sm btn-warning btn-show-hover">Resubmit to Canvas</a>
                </td>
            </tr>
        }
    </tbody>
</table>