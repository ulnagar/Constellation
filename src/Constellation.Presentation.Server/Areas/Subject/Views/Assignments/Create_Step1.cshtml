@model Constellation.Presentation.Server.Areas.Subject.Models.Assignments.CreateViewModel

<h2>Canvas Assignments</h2>

<hr />

<div class="jumbotron jumbotron-fluid">
    <div class="container">
    <h1 class="display-4">Step 1</h1>
    <p class="lead">Select the course that the assignment is linked to.</p>
    </div>
</div>

<form asp-area="Subject" asp-controller="Assignments" asp-action="Create_Step2" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="form-group row">
            <label asp-for="Command.CourseId" class="col-md-2">Course</label>
            <div class="col-md-3">
                <select asp-for="Command.CourseId" asp-items="Model.CoursesList" class="form-control"></select>
                <span asp-validation-for="Command.CourseId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Next" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}