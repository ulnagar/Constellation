@page "{id:Guid?}"
@model Constellation.Presentation.Server.Areas.Subject.Pages.GroupTutorials.Tutorials.UpsertModel

@{
    var title = Model.Id.HasValue ? "Edit Group Tutorial" : "Create New Group Tutorial";
}

<h2>@title</h2>

<div class="row">
    <a asp-page="Index" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-page-handler="Update">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StartDate" class="col-md-2">Start Date</label>
            <div class="col-md-5">
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EndDate" class="col-md-2">End Date</label>
            <div class="col-md-5">
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@if (Model.Error is not null)
{
    <vc:error-display-redirect error="@Model.Error">
    </vc:error-display-redirect>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}