@page
@model Constellation.Presentation.Server.Areas.Subject.Pages.Assignments.CreateModel

<h2>Canvas Assignments</h2>

<hr />

<form method="post">
    <div class="form-horizontal">

        <div class="form-group row">
            <label asp-for="Command.CourseId" class="col-md-2">Course</label>
            <div class="col-md-3">
                <select asp-for="SelectedCourseId" asp-items="Model.CoursesList"></select>
                <span asp-validation-for="Command.CourseId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}