@model Devices_StatusUpdateViewModel

<h2>Update device status</h2>

<div class="row">
    <a asp-action="Details" asp-controller="Devices" asp-area="Equipment" asp-route-id="@Model.SerialNumber" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-action="StatusUpdate" asp-controller="Devices" asp-area="Equipment" method="post">
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.SerialNumber)

        <div class="form-group row">
            <label asp-for="SerialNumber" class="col-md-2">Serial Number</label>
            <div class="col-md-3">
                <input asp-for="SerialNumber" class="form-control" readonly />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Make" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Make" class="form-control" readonly />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Model" class="form-control" readonly />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Description" class="form-control" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CurrentStatus" class="col-md-2">Current Status</label>
            <div class="col-md-3">
                <input asp-for="CurrentStatus" class="form-control" readonly />
                <span asp-validation-for="CurrentStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NewStatus" class="col-md-2">New Status</label>
            <div class="col-md-3">
                <select asp-for="NewStatus" asp-items="@Model.StatusList" class="form-control"></select>
                <span asp-validation-for="NewStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Notes" class="col-md-2"></label>
            <div class="col-md-5">
                <textarea asp-for="Notes" class="form-control" rows="3" cols="200"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}