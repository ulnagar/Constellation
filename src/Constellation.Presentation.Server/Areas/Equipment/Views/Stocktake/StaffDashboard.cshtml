@using Constellation.Presentation.Server.Areas.Equipment.Models.Stocktake
@model StaffDashboardViewModel

<h2>Stocktake Data Collection</h2>

<div>
    <a asp-action="Submit" asp-controller="Stocktake" asp-area="Equipment" asp-route-id="@Model.Id" class="btn btn-primary">Sight Device</a>
</div>

<hr />

<div class="form-horizontal">
    <div class="form-group row">
        <label class="col-md-2">Stocktake</label>
        <div class="col-md-6">@Model.Name</div>
    </div>

    <div class="form-group row">
        <label class="col-md-2">Start Date</label>
        <div class="col-md-3">@Model.StartDate.ToShortDateString()</div>
        <label class="col-md-2">End Date</label>
        <div class="col-md-3">@Model.EndDate.ToShortDateString()</div>
    </div>
</div>

<hr />

<div class="form-group row mt-6">
    <div class="col-md-6"><h4 class="mt-2 mb-0">Recorded sightings:</h4></div>
</div>

<table class="table-striped table-hover data-table">
    <thead>
        <tr>
            <th>Serial / Asset</th>
            <th>Description</th>
            <th>Location</th>
            <th>User</th>
            <th>Sighted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sightings)
        {
            <tr>
                <td>@item.SerialNumber / @item.AssetNumber</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.User</td>
                <td>@item.SightedBy (@item.SightedOn.ToShortDateString())</td>
            </tr>
        }
    </tbody>
</table>