@page "/Portal/Absences/School/Explanation/{Id}"
@model Constellation.Presentation.Server.Areas.Portal.Pages.Absences.SchoolExplanationModel

<h2>Absence Explanation</h2>

<div class="row">
    <a asp-page="School" asp-area="Portal" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <label asp-for="DisplayAbsence.Date" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.Date, "LongDate")
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.StudentName" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.StudentName)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.ClassName" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.ClassName)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.PeriodName" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.PeriodName)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.PeriodTimeframe" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.PeriodTimeframe)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Explanation" class="col-md-2"></label>
            <div class="col-md-6">
                <textarea asp-for="Explanation" rows="5" cols="100" class="form-control"></textarea>
                <span asp-validation-for="Explanation" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Submit" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
