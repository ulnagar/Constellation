@page "/Portal/Absences/School/Verification/{Id}"
@model Constellation.Presentation.Server.Areas.Portal.Pages.Absences.SchoolVerificationModel


<h2>Absence Verification</h2>

<div class="row">
    <a asp-page="School" asp-area="Portal" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form method="post" id="verifyForm">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.IsVerified)

        <div class="form-group row">
            <label asp-for="DisplayAbsence.Date" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.Date, "LongDate")
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.StudentName" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.StudentName)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.ClassName" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.ClassName)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.PeriodName" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.PeriodName) (@Html.DisplayFor(model => model.DisplayAbsence.PeriodTimeframe))
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.AbsenceTimeframe" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.AbsenceTimeframe) (@Html.DisplayFor(model => model.DisplayAbsence.AbsenceLength) minutes)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DisplayAbsence.Explanation" class="col-md-2"></label>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.DisplayAbsence.Explanation)
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Comment" class="col-md-2"></label>
            <div class="col-md-6">
                <textarea asp-for="Comment" rows="5" cols="100" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-1 col-md-3">
                <button id="verify" class="btn btn-success btn-block btn-lg">Verify</button>
            </div>
            <div class="offset-2 col-md-3">
                <button id="reject" class="btn btn-warning btn-block btn-lg">Reject</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $('#verify').click(function(e) {
            e.preventDefault();

            $('#IsVerified').val("true");

            $('#verifyForm').submit();
        });

        $('#reject').click(function(e) {
            e.preventDefault();

            $('#IsVerified').val("false");

            $('#verifyForm').submit();
        })
    </script>
}