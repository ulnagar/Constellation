@using Constellation.Presentation.Server.Areas.Portal.Models.Lessons
@model AdminSearchViewModel

<div class="modal fade" id="searchLesson">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AdminLessonSearch" asp-controller="Lessons" asp-area="Portal" method="post">
                <div class="modal-header">
                    <h3 class="modal-title">Search Lessons and Rolls</h3>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row">
                            <div class="form-group col-md-10 col-md-offset-1">
                                <span class="control-label">Search either schools or students:</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-10 col-md-offset-1">
                                <span class="control-label">Schools </span>
                                <select asp-for="SchoolCode" asp-items="Model.SchoolList" class="form-control combo">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-10 col-md-offset-1">
                                <span class="control-label">Students </span>
                                <select asp-for="StudentId" asp-items="Model.StudentList" class="form-control combo">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancel" />
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>