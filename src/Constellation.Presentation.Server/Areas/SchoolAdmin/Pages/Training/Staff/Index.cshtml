@page "{StaffId}"
@model Constellation.Presentation.Server.Areas.SchoolAdmin.Pages.Training.Staff.IndexModel
@using Constellation.Presentation.Server.Areas.SchoolAdmin.Pages.Training.Completion

<h2>Mandatory Training Completion Records</h2>

<div>
    <a asp-page="/Training/Completion/Upsert" class="btn btn-warning" asp-route-Mode="@UpsertModel.ModeOptions.SoloStaff">Create New</a>
    
    <button class="btn btn-secondary" data-toggle="modal" data-target="#legend">View Legend</button>
</div>

<partial name="_StatusIconModalPartial" />

<hr />

<table class="table-striped table-hover data-table">
    <thead>
        <tr>
            <th></th>
            <th>Module</th>
            <th>Date Completed</th>
            <th>Date Due</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.CompletionList.Modules)
    {
        <tr>
            <td>
                @switch (item.TimeToExpiry)
                {
                    case > 31:
                        <img src="/images/GreenLight.png" class="training status-icon" title="@item.TimeToExpiry Days Remaining" />
                        break;
                    case > 15:
                        <img src="/images/YellowLight.png" class="training status-icon" title="@item.TimeToExpiry Days Remaining" />
                        break;
                    case > 1:
                        <img src="/images/RedLight.png" class="training status-icon" title="@item.TimeToExpiry Days Remaining" />
                        break;
                    default:
                        <img src="/images/RedLight.png" class="training status-icon blink" title="@item.TimeToExpiry Days Remaining" />
                        break;
                }
            </td>
            <td>@item.ModuleName</td>
            <td>
                @if (!item.RecordEffectiveDate.HasValue)
                {
                    @:N/A
                }
                else
                {
                    @item.RecordEffectiveDate.Value.ToString("dd/MM/yyyy")
                }
            </td>
            <td>
                @if (!item.DueDate.HasValue)
                {
                    @:N/A
                }
                else
                {
                    @item.DueDate.Value.ToString("dd/MM/yyyy")
                }
            </td>
            <td>
                @if (item.RecordEffectiveDate.HasValue)
                {
                    <a asp-page="/Training/Completion/Details" asp-route-moduleId="@item.ModuleId.Value" asp-route-completionId="@item.RecordId.Value" class="btn btn-sm btn-secondary btn-show-hover">More Details...</a>
                }
            </td>
        </tr>
    }
</table>