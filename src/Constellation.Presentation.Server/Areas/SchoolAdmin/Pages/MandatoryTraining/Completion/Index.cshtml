@page
@model Constellation.Presentation.Server.Areas.SchoolAdmin.Pages.MandatoryTraining.Completion.IndexModel
@inject IAuthorizationService AuthorizationService

@{
    var isEditorTest = await AuthorizationService.AuthorizeAsync(User, AuthPolicies.CanEditTrainingModuleContent);
}

<h2>Mandatory Training Completion Records</h2>

<div>
    <a asp-page="Upsert" class="btn btn-warning">Create New</a>
</div>

<hr />

<table class="table-striped table-hover data-table">
    <thead>
        <tr>
            <th></th>
            <th>Staff Member</th>
            <th>Module</th>
            <th>Date Completed</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.CompletionRecords)
    {
        <tr>
            <td>
                @{
                    if (item.ExpiryCountdown > 31)
                    {
                        <img src="/images/GreenLight.png" class="status-icon" title="@item.ExpiryCountdown Days Remaining" />
                    }
                    else if (item.ExpiryCountdown > 15)
                    {
                        <img src="/images/YellowLight.png" class="status-icon" title="@item.ExpiryCountdown Days Remaining" />
                    }
                    else if (item.ExpiryCountdown > 1)
                    {
                        <img src="/images/RedLight.png" class="status-icon" title="@item.ExpiryCountdown Days Remaining" />
                    }
                    else
                    {
                        <img src="/images/RedLight.png" class="status-icon blink" title="@item.ExpiryCountdown Days Remaining" />
                    }
                }
            </td>
            <td>@item.StaffFirstName @item.StaffLastName</td>
            <td>@item.ModuleName</td>
            <td>@item.CompletedDate.ToString("dd/MM/yyyy")</td>
            <td>
                @{
                    var canViewDetailsTest = await AuthorizationService.AuthorizeAsync(User, item.Id, AuthPolicies.CanViewTrainingCompletionRecord);

                    if (canViewDetailsTest.Succeeded)
                    {
                            <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">More Details...</a>
                    }
                }
            </td>
        </tr>
    }
</table>