@page
@model Constellation.Presentation.Server.Areas.SchoolAdmin.Pages.MandatoryTraining.Modules.IndexModel
@inject IAuthorizationService AuthorizationService

@{
    var canEditTest = await AuthorizationService.AuthorizeAsync(User, AuthPolicies.CanEditTrainingModuleContent);
    var canViewDetailsTest = await AuthorizationService.AuthorizeAsync(User, AuthPolicies.CanViewTrainingModuleContentDetails);
}

<h2>Mandatory Training Modules</h2>

@if (canEditTest.Succeeded)
{
    <div>
        <a asp-page="Upsert" class="btn btn-warning">Create New</a>
    </div>
}

<hr />

<table class="table-striped table-hover data-table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Frequency</th>
            <th>Link</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Modules)
    {
        <tr>
            <td>@item.IsActive</td>
            <td>@item.Name</td>
            <td>@item.Expiry</td>
            <td>
                <a href="@item.Url" target="_blank" class="btn btn-sm btn-success">Launch</a>
            </td>
            <td>
                @if (canViewDetailsTest.Succeeded)
                {
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">More Details...</a>
                }
            </td>
        </tr>
    }
</table>