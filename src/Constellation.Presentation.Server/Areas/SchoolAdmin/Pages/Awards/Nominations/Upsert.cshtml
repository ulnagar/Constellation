@page
@using Constellation.Core.Enums;
@model Constellation.Presentation.Server.Areas.SchoolAdmin.Pages.Awards.Nominations.UpsertModel
@{
}

<h2>Create new Nomination Period</h2>

<div class="page-menu">
    <a asp-page="Index" asp-area="SchoolAdmin" class="btn btn-danger btn-pull-right">Go Back</a>
</div>

<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label asp-for="LockoutDate" class="col-md-2">Lock Date</label>
            <div class="col-md-3">
                <input asp-for="LockoutDate" class="form-control" type="date" />
                <span asp-validation-for="LockoutDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Grades" class="col-md-2">Included Grades</label>
            <div class="col-md-3">
                <select asp-for="Grades" asp-items="@Html.GetEnumSelectList<Grade>()" class="form-control combo">
                </select>
                <span asp-validation-for="Grades" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}