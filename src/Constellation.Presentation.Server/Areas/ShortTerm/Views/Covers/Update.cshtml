@model Covers_UpdateViewModel

<h2>Edit Cover</h2>

<div class="row">
    <a asp-action="Index" asp-controller="Covers" asp-area="ShortTerm" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-action="Update" asp-controller="Covers" asp-area="ShortTerm" method="post">
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CoverType)
        
        <div class="form-group row">
            <label asp-for="UserName" class="col-md-2">Covering Teacher</label>
            <div class="col-md-3">
                <input asp-for="UserName" class="form-control" readonly="true" />
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="OfferingName" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="OfferingName" class="form-control" readonly="true" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StartDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EndDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}