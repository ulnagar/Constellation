@page "{id:guid}"
@model Constellation.Presentation.Server.Areas.ShortTerm.Pages.Covers.UpdateModel

<h2>Edit Cover</h2>

<div class="row">
    <a asp-page="Index" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-page-handler="Update" method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <label asp-for="TeacherName" class="col-md-2">Covering Teacher</label>
            <div class="col-md-10">
                <span>@Model.TeacherName (@Model.TeacherSchool)</span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="OfferingName" class="col-md-2"></label>
            <div class="col-md-3">
                <span>@Model.OfferingName</span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StartDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EndDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}