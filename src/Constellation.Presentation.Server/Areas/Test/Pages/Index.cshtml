@page
@model Constellation.Presentation.Server.Areas.Test.Pages.IndexModel

<h2>Test Page</h2>

<a asp-page-handler="Download" class="btn btn-warning">Download Receipt</a>

@if (Model.Messages.Any())
{
    <ul>
        @foreach (var message in Model.Messages)
        {
            <li>@message</li>
        }
    </ul>
}

@if (Model.Files.Any())
{
    <table>
        <thead>
        <tr>
            
        </tr>
        </thead>
        <tbody>
        @foreach (var file in Model.Files)
        {
            <tr>
                <td></td>
            </tr>
        }

        </tbody>
    </table>
}