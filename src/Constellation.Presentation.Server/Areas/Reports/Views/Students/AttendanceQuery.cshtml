@model Student_AttendanceQueryViewModel

<h2>Student Adobe Connect Attendance Report</h2>

<div class="btn-group new-group">
    @Html.ActionLink("New Search", "AttendanceQuerySelection", new { area = "Reports" }, new { @class = "btn btn-warning" })
</div>

<hr />

<table class="table-striped table-hover data-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Login</th>
            <th>Time In</th>
            <th>Time Out</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model.Users.OrderBy(u => u.LoginTime))
        {
            var cssClass = "";
            if (user.Highlighted)
            {
                cssClass = "current-cover";
            }
            <tr class="@cssClass">
                <td>@user.Name</td>
                <td>@user.Login</td>
                <td>@((user.LoginTime.HasValue) ? user.LoginTime.Value.ToString("g") : "")</td>
                <td>@((user.LogoutTime.HasValue) ? user.LogoutTime.Value.ToString("g") : "")</td>
            </tr>
        }
    </tbody>
</table>