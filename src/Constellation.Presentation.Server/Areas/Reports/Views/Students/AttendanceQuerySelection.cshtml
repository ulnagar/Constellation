@model Student_AttendanceQuerySelectionViewModel

<h2>Student Adobe Connect Attendance Report</h2>

<div class="row">
    <a asp-action="Index" asp-controller="Students" asp-area="Reports" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<form asp-action="AttendanceQuerySelection" asp-controller="Students" asp-area="Reports" method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        
        <div class="form-group row">
            <label asp-for="StudentId" class="col-md-2"></label>
            <div class="col-md-3">
                <select asp-for="StudentId" asp-items="Model.StudentList" class="form-control combo">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="LookupDate" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="LookupDate" class="form-control" />
                <span asp-validation-for="LookupDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Search" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </div>
        
        <hr />
        
        <table class="table-striped table-hover data-table">
            <thead>
                <tr>
                    <th>Period Name</th>
                    <th>Class</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var period in Model.Periods.OrderBy(p => p.Timetable).ThenBy(p => p.StartTime))
                {
                    <tr>
                        <td>@period.Timetable - @period.Name</td>
                        @if (Model.ClassList.Any(c => c.PeriodId == period.Id))
                        {
                            var session = Model.ClassList.FirstOrDefault(c => c.PeriodId == period.Id);
                            <td>@session.ClassName</td>
                            <td>@Html.ActionLink("View Session Report", "AttendanceQuery", "Students", new { area = "Reports", studentId = Model.StudentId, lookupDate = Model.LookupDate, scoId = session.RoomSco }, new { @class = "btn btn-sm btn-warning" })</td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    </div>
</form>