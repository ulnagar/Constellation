@model Student_FTEBreakdown_ViewModel

<h2>FTE Value by Grade</h2>

<div class="row">
    <a asp-action="Index" asp-controller="Students" asp-area="Reports" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr />

<table class="table-striped table-hover data-table">
    <thead>
        <tr>
            <th rowspan="2">Grade</th>
            <th colspan="2">Male</th>
            <th colspan="2">Female</th>
            <th colspan="2">Total</th>
        </tr>
        <tr>
            <th># Students</th>
            <th>FTE</th>
            <th># Students</th>
            <th>FTE</th>
            <th># Students</th>
            <th>FTE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model.Grades.OrderBy(grade => grade.Grade))
            {
                <tr>
                    <td>@grade.Grade</td>
                    <td>@grade.MaleEnrolments</td>
                    <td>@grade.MaleEnrolmentFTE</td>
                    <td>@grade.FemaleEnrolments</td>
                    <td>@grade.FemaleEnrolmentFTE</td>
                    <td>@grade.TotalEnrolments</td>
                    <td>@grade.TotalEnrolmentFTE</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <th>Total</th>
            <th>@Model.TotalMaleEnrolments</th>
            <th>@Model.TotalMaleEnrolmentFTE</th>
            <th>@Model.TotalFemaleEnrolments</th>
            <th>@Model.TotalFemaleEnrolmentFTE</th>
            <th>@Model.TotalEnrolments</th>
            <th>@Model.TotalEnrolmentFTE</th>
        </tr>
    </tfoot>
</table>
