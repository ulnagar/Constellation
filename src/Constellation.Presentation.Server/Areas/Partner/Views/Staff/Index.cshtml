@using Constellation.Application.Models.Auth

@using Constellation.Core.Enums
@model Staff_ViewModel

@{
    var authorised = (User.IsInRole(AuthRoles.Editor) || User.IsInRole(AuthRoles.Admin));
}

<h2>Staff List</h2>

<div>
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">With Status <span class="caret"></span></button>
        <div class="dropdown-menu">
            <a asp-action="All" asp-controller="Staff" asp-area="Partner" class="dropdown-item">All Staff</a>
            <a asp-action="Active" asp-controller="Staff" asp-area="Partner" class="dropdown-item">Active</a>
            <a asp-action="Inactive" asp-controller="Staff" asp-area="Partner" class="dropdown-item">Inactive</a>
        </div>
    </div>

    <div class="btn-group" role="group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">From Faculty <span class="caret"></span></button>
        <div class="dropdown-menu">
            @{
                foreach (var faculty in Model.FacultyList.OrderBy(faculty => faculty.Value))
                {
                    <a asp-action="FromFaculty" asp-controller="Staff" asp-area="Partner" asp-route-facultyId="@faculty.Key" class="dropdown-item">@faculty.Value</a>
                }
            }
        </div>
    </div>
    
    @if (authorised)
    {
        <div class="btn-group new-group" role="group">
            <a asp-action="Create" asp-controller="Staff" asp-area="Partner" class="btn btn-info">Create New</a>
        </div>
    }
</div>

<hr />

<table class="table-striped table-hover data-table">
    <thead>
    <tr>
        <th>Staff Id</th>
        <th>Name</th>
        <th>Faculty</th>
        <th>School</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.Id)</td>
                <td>@Html.DisplayFor(model => item.Name)</td>
                <td>
                    @foreach (var entry in item.Faculties)
                    {
                        @Html.DisplayFor(model => entry, "Faculty")
                    }
                </td>
                <td>@Html.DisplayFor(model => item.SchoolName)</td>
                <td>
                    <a asp-action="Details" asp-controller="Staff" asp-area="Partner" asp-route-id="@item.Id" class="btn btn-sm btn-info btn-show-hover">More Info...</a>
                </td>
            </tr>
        }
    </tbody>
</table>