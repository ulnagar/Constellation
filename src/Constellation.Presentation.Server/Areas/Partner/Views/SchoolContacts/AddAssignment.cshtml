@model Contacts_AssignmentViewModel

<h2>Add School Contact Role</h2>

<div class="row">
    <a asp-action="Index" asp-controller="SchoolContacts" asp-area="Partner" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr/>

<form asp-action="_AddAssignment" asp-controller="SchoolContacts" asp-area="Partner" method="post">
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        @Html.HiddenFor(model => model.ContactRole.SchoolContactId)
        @Html.HiddenFor(model => model.ReturnUrl)

        <div class="row">
            <div class="form-group col-md-6">
                <span class="control-label">Staff member </span><br />
                <h4>@Model.ContactRole.SchoolContactName</h4>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <span class="control-label">is the </span>
                <select asp-for="ContactRole.Role" asp-items="@Model.RoleList" class="combo-with-tag" style="width:100%">
                    <option value="">-- Select or Enter --</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <span class="control-label">at </span>
                <select asp-for="ContactRole.SchoolCode" asp-items="@Model.SchoolList" class="combo" style="width:100%">
                    <option value="">-- Select --</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}