@model SchoolStaff_UpdateViewModel

<h2>@(Model.IsNew ? "New Contact" : "Edit Contact")</h2>

<div class="row">
    <a asp-action="Index" asp-controller="SchoolContacts" asp-area="Partner" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr/>

<form asp-action="Update" asp-controller="SchoolContacts" asp-area="Partner" method="post">
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Contact.Id)
        @Html.HiddenFor(model => model.IsNew)

        <div class="form-group row">
            <label asp-for="Contact.FirstName" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Contact.FirstName" class="form-control" />
                <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Contact.LastName" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Contact.LastName" class="form-control" />
                <span asp-validation-for="Contact.LastName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Contact.EmailAddress" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Contact.EmailAddress" class="form-control" />
                <span asp-validation-for="Contact.EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Contact.PhoneNumber" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Contact.PhoneNumber" class="form-control" />
                <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        @if (Model.IsNew)
        {
            <h2>Assign a role:</h2>

            <div class="form-group row">
                <label asp-for="ContactRole.SchoolCode" class="col-md-2">School</label>
                <div class="col-md-6">
                    <select asp-for="ContactRole.SchoolCode" asp-items="@Model.SchoolList" class="combo" style="width:100%">
                        <option value="">-- Select --</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ContactRole.Role" class="col-md-2">Role</label>
                <div class="col-md-6">
                    <select asp-for="ContactRole.Role" asp-items="@Model.RoleList" class="combo-with-tag" style="width:100%">
                        <option value="-- Select or Enter --"></option>
                    </select>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}