@model School_UpdateViewModel

<h2>@(Model.IsNew ? "New School" : "Edit School")</h2>

<div class="row">
    <a asp-action="Index" asp-controller="Schools" asp-area="Partner" class="btn btn-danger btn-pull-right-solo">Go Back</a>
</div>

<hr/>

<form asp-action="Update" asp-controller="Schools" asp-area="Partner" method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.IsNew)
        @Html.HiddenFor(model => model.id)

        <div class="form-group row">
            <label asp-for="Resource.Code" class="col-md-2">School Code</label>
            <div class="col-md-3">
                <input asp-for="Resource.Code" class="form-control" readonly="@(!Model.IsNew)" />
                <span asp-validation-for="Resource.Code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.Name" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Resource.Name" class="form-control" />
                <span asp-validation-for="Resource.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.Address" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Resource.Address" class="form-control" />
                <span asp-validation-for="Resource.Address" class="text-danger"></span>
            </div>

            <label asp-for="Resource.Division" class="col-md-2 offset-2"></label>
            <div class="col-md-3">
                <input asp-for="Resource.Division" class="form-control" />
                <span asp-validation-for="Resource.Division" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.Town" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Resource.Town" class="form-control" />
                <span asp-validation-for="Resource.Town" class="text-danger"></span>
            </div>

            <div class="col-md-3 offset-4">
                <div class="custom-control custom-switch">
                    <input asp-for="Resource.HeatSchool" class="form-control custom-control-input" />
                    <label asp-for="Resource.HeatSchool" class="custom-control-label">Heat Week School?</label>
                    <span asp-validation-for="Resource.HeatSchool" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.State" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Resource.State" class="form-control" />
                <span asp-validation-for="Resource.State" class="text-danger"></span>
            </div>

            <label asp-for="Resource.Electorate" class="col-md-2 offset-2"></label>
            <div class="col-md-3">
                <input asp-for="Resource.Electorate" class="form-control" />
                <span asp-validation-for="Resource.Electorate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.PostCode" class="col-md-2">Post Code</label>
            <div class="col-md-3">
                <input asp-for="Resource.PostCode" class="form-control" />
                <span asp-validation-for="Resource.PostCode" class="text-danger"></span>
            </div>

            <label asp-for="Resource.PrincipalNetwork" class="col-md-2 offset-2">Principal Network</label>
            <div class="col-md-3">
                <input asp-for="Resource.PrincipalNetwork" class="form-control" />
                <span asp-validation-for="Resource.PrincipalNetwork" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.PhoneNumber" class="col-md-2">Phone Number</label>
            <div class="col-md-3">
                <input asp-for="Resource.PhoneNumber" class="form-control" />
                <span asp-validation-for="Resource.PhoneNumber" class="text-danger"></span>
            </div>

            <label asp-for="Resource.TimetableApplication" class="col-md-2 offset-2">Timetable Application</label>
            <div class="col-md-3">
                <input asp-for="Resource.TimetableApplication" class="form-control" />
                <span asp-validation-for="Resource.TimetableApplication" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.FaxNumber" class="col-md-2">Fax Number</label>
            <div class="col-md-3">
                <input asp-for="Resource.FaxNumber" class="form-control" />
                <span asp-validation-for="Resource.FaxNumber" class="text-danger"></span>
            </div>

            <label asp-for="Resource.RollCallGroup" class="col-md-2 offset-2">RollCall Group</label>
            <div class="col-md-3">
                <input asp-for="Resource.RollCallGroup" class="form-control" />
                <span asp-validation-for="Resource.RollCallGroup" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Resource.EmailAddress" class="col-md-2">Email Address</label>
            <div class="col-md-6">
                <input asp-for="Resource.EmailAddress" class="form-control" />
                <span asp-validation-for="Resource.EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}