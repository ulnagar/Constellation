@page
@model Constellation.Presentation.Server.Areas.Partner.Pages.SchoolContacts.CreateModel

@{
}

<h2>New Contact</h2>

<div class="page-menu">
    <a asp-page="/SchoolContacts/Index" asp-area="Partner" class="btn btn-danger btn-pull-right">Go Back</a>
</div>

<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label asp-for="FirstName" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EmailAddress" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <h2>Assign a role:</h2>

        <div class="form-group row">
            <label asp-for="SchoolCode" class="col-md-2">School</label>
            <div class="col-md-6">
                <select asp-for="SchoolCode" asp-items="@Model.SchoolsList" class="combo" style="width:100%">
                    <option value="">-- Select --</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Role" class="col-md-2">Role</label>
            <div class="col-md-6">
                <select asp-for="Role" asp-items="@Model.RolesList" class="combo-with-tag" style="width:100%">
                    <option value="">-- Select or Enter --</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Note" class="col-md-2">Note</label>
            <div class="col-md-6">
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}