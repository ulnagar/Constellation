@page
@model DetailsModel
@inject IAuthorizationService AuthorizationService

@{
    var canEditTest = await AuthorizationService.AuthorizeAsync(User, AuthPolicies.CanEditFaculties);
}

<h2>Faculty Details</h2>

<div class="page-menu">
    @if (canEditTest.Succeeded)
    {
        <a class="btn btn-secondary" asp-page="Upsert" asp-route-Id="@Model.FacultyId">Edit</a>
    }

    <a href="javascript:history.go(-1)" class="btn btn-danger btn-pull-right">Go Back</a>
</div>

<hr />

<div>
    <dl class="row">
        <dt class="col-md-2">
            <label asp-for="Faculty.Id"></label>
        </dt>
        <dd class="col-md-10">
            <span>@Model.Faculty.Id</span>
        </dd>

        <dt class="col-md-2">
            <label asp-for="Faculty.Name"></label>
        </dt>
        <dd class="col-md-10">
            <span>@Model.Faculty.Name</span>
        </dd>

        <dt class="col-md-2">
            <label asp-for="Faculty.Colour"></label>
        </dt>
        <dd class="col-md-10">
            <span>@Model.Faculty.Colour</span>
        </dd>
    </dl>
</div>

<hr />

<h3>Current Members</h3>

<div class="mb-3">
    @if (canEditTest.Succeeded)
    {
        <a asp-page="AddMember" asp-route-facultyId="@Model.Faculty.Id" class="btn btn-info">Add Member</a>
    }
</div>

<div>
    <div id="expiring" class="tab-pane active" role="tabpanel">
        <table class="table-striped table-hover data-table">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Member Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Faculty.Members)
                {
                    <tr>
                        <td></td>
                        <td>@item.StaffFirstName @item.StaffLastName</td>
                        <td>@item.Role</td>
                        <td>
                            @if (canEditTest.Succeeded)
                            {
                                <form asp-page-handler="RemoveMember" asp-route-membershipId="@item.Id">
                                    <input type="hidden" asp-for="FacultyId" />
                                    <button type="submit" class="btn btn-sm btn-danger btn-show-hover">Remove</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>