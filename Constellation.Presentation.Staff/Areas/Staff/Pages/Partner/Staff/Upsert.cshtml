@page "{id?}"
@model Constellation.Presentation.Staff.Areas.Staff.Pages.Partner.Staff.UpsertModel

@{
}

<h2>@(string.IsNullOrWhiteSpace(Model.Id) ? "New Staff Member" : "Edit Staff Member")</h2>

<div class="page-menu">
    <a asp-page="/Partner/Staff/Index" asp-area="Staff" class="btn btn-danger btn-pull-right">Go Back</a>
</div>
        
<hr />

<form method="post">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label asp-for="StaffId" class="col-md-2">Staff Id</label>
            <div class="col-md-3">
                <input asp-for="StaffId" class="form-control" readonly="@(!string.IsNullOrWhiteSpace(Model.Id))" />
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FirstName" class="col-md-2">First Name</label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-md-2">Last Name</label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PortalUsername" class="col-md-2">DoE Username</label>
            <div class="col-md-3">
                <input asp-for="PortalUsername" class="form-control" />
                <span asp-validation-for="PortalUsername" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SchoolCode" class="col-md-2">School</label>
            <div class="col-md-3">
                <select asp-for="SchoolCode" asp-items="@Model.SchoolList" class="form-control combo">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="SchoolCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="IsShared" class="col-md-2">Shared Staff</label>
            <div class="col-md-3">
                <input asp-for="IsShared" class="form-control custom-checkbox" />
                <span asp-validation-for="IsShared" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-primary btn-block btn-lg" />
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial"/>
}