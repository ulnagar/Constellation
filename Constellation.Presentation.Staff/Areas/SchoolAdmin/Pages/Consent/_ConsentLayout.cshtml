@using Constellation.Presentation.Staff.Areas.SchoolAdmin.Pages.Consent
@{
    Layout = "/Pages/Shared/_StaffLayout.cshtml";

    string activePage = ViewData["ActivePage"]?.ToString() ?? "None";
}

<div class="row sidebar-layout">
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
            <h4 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mb-1 text-muted">
                <span class="w-100">Third Party Consent</span>
            </h4>
            <ul class="nav flex-column mx-2">
                <li class="nav-item">
                    <a class="nav-link @(activePage == ConsentPages.Applications ? "active" : "")" asp-page="/Consent/Applications/Index" asp-area="SchoolAdmin">
                        Applications
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(activePage == ConsentPages.Transactions ? "active" : "")" asp-page="/Consent/Responses/Index" asp-area="SchoolAdmin">
                        Responses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(activePage == ConsentPages.Reports ? "active" : "")" asp-page="/Consent/Reports/Index" asp-area="SchoolAdmin">
                        Reports
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 pt-md-3">
        @RenderBody()
    </main>
</div>

